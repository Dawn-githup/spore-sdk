{
  "name": "@spore-sdk/core",
  "version": "0.1.0-beta.1",
  "license": "MIT",
  "scripts": {
    "test": "vitest",
    "build": "pnpm run build:lib && pnpm run build:cjs",
    "build:lib": "tsc -p tsconfig.build.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json",
    "lint": "prettier --check 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "clean": "pnpm run clean:cache & pnpm run clean:build",
    "clean:build": "rimraf lib rimraf cjs && pnpm run clean:buildinfo",
    "clean:buildinfo": "rimraf tsconfig.*tsbuildinfo",
    "clean:cache": "rimraf .turbo"
  },
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "require": {
        "types": "./cjs/index.d.ts",
        "default": "./cjs/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "cjs"
  ],
  "dependencies": {
    "@ckb-lumos/bi": "^0.20.0",
    "@ckb-lumos/base": "^0.20.0",
    "@ckb-lumos/lumos": "^0.20.0",
    "@ckb-lumos/codec": "^0.20.0",
    "@ckb-lumos/config-manager": "^0.20.0",
    "whatwg-mimetype": "^3.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/whatwg-mimetype": "^3.0.0",
    "vitest": "^0.31.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShookLyngs/spore-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/ShookLyngs/spore-sdk/issues"
  }
}
